:weather/rain/default
	volumerel 1
	attenuation 2.5
	playrepeat weather/rain/default
end

:weather/rain/heavy
	volumerel 1
	attenuation 1.5
	playrepeat weather/rain/heavy
end

:weather/rain/surfmet
	volumerel 1
	attenuation 2.5
	playrepeat weather/rain/surfmet
end

:weather/rain/surfhard
	volumerel 1
	attenuation 2.5
	playrepeat weather/rain/surfhard
end



:weather/wind
	volumerand 24 127
	attenuation 2.0
	playrepeat weather/wind
end

:weather/wind2
