//

// General rain sounds.
:weathremum/rain/default
	volumerel 1
	attenuation 2.5
	playrepeat weathremum/rain/default
end

:weathremum/rain/heavy
	volumerel 1
	attenuation 1.66
	playrepeat weathremum/rain/heavy
end

// Different rain surfaces.
:weathremum/rainsurface/metal
	volumerel 1
	attenuation 2.5
	playrepeat weathremum/rainsurface/metal
end

:weathremum/rainsurface/hard
	volumerel 1
	attenuation 2.5
	playrepeat weathremum/rainsurface/hard
end

:weathremum/rainsurface/plastic
	volumerel 1
	attenuation 2.5
	playrepeat weathremum/rainsurface/plastic
end


// Winds.
:weather/wind
	volumerand 24 127
	attenuation 2.0
	playrepeat weather/wind
end

:weather/wind2
	volumerand 24 127
	attenuation 2.0
	playrepeat weather/wind2
end
